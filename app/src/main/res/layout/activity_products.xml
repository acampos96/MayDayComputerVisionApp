<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".products">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/common_google_signin_btn_icon_disabled"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/productLogo" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="IDProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="128dp" android:id="@+id/productID" android:layout_marginTop="20dp"
            android:textSize="36sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/productLogo"/>
    <Button
            android:text="Volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="-4dp"
            android:id="@+id/back" app:layout_constraintStart_toStartOf="parent" android:onClick="back"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/textView3"
            android:textSize="24sp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/ratingBar" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/productID"/>
</android.support.constraint.ConstraintLayout>