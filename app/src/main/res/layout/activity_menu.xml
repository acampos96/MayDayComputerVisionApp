<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu">

    <Button
            android:text="Detectar Productos"
            android:layout_width="235dp"
            android:layout_height="95dp"
            android:id="@+id/button" android:layout_marginTop="492dp"
            app:layout_constraintTop_toTopOf="parent" android:onClick="detectar" android:layout_marginStart="88dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="234dp"
            android:layout_height="235dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" android:layout_marginTop="184dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="85dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.964"/>
</android.support.constraint.ConstraintLayout>